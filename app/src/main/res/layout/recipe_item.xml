<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFFF" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/recipe_image_main_list"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingBottom="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/recipe_title_main_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/recipe_image_main_list"/>

        <RatingBar
            android:id="@+id/recipe_rating_main_list"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:max="5"
            android:stepSize="1"
            android:layout_below="@id/recipe_title_main_list"
            android:layout_marginBottom="5dp"/>

        <TextView
        android:id="@+id/recipe_addedby_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/recipe_rating_main_list"/>

        <TextView
            android:id="@+id/recipe_date_main_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/recipe_addedby_main_list"/>

        <TextView
            android:id="@+id/recipe_description_main_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_date_main_list"
            android:textAppearance="@style/TextAppearance.AppCompat"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>